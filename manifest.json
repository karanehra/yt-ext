{
    "name": "Getting Started Example",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "options_page": "options.html",
    "permissions": [
        "http://localhost:8000/*",
        "activeTab",
        "declarativeContent",
        "storage",
        "tabs"
    ],
    "page_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/watch?v=*"
            ],
            "run_at": "document_idle",
            "js": [
                "contentScript.js"
            ]
        }
    ]
}